# example of database template

base: &base
  adapter: mysql2
  encoding: utf8
  reconnect: false
  pool: 5
  username: <%= db_user %>
  password: <%= Capistrano::CLI.ui.ask('Enter mySQL database password: ') %>
  host: <%= db_local_domain %>
  port: 3306

development:
  database: <%= db_prefix %>_development
  socket: /tmp/mysql.sock
  <<: *base

staging:
  database: <%= db_prefix %>_staging
  socket: /var/run/mysqld/mysqld.sock
  <<: *base

test:
  database: <%= db_prefix %>_test
  socket: /tmp/mysql.sock
  <<: *base

production:
  database: <%= db_prefix %>_production
  socket: /var/run/mysqld/mysqld.sock
  <<: *base

