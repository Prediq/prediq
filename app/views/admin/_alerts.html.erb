<% if notice %>
<div class="alert fade in">
  <button type="button" class="close" data-dismiss="alert">×</button>
  <%= flash[:notice] %>
</div>
<% end %>

<% if alert.present? %>
<div class="alert alert-block alert-error fade in">
  <button type="button" class="close" data-dismiss="alert">×</button>
  <h4 class="alert-heading">You got an error!</h4>
  <p><%= flash[:alert] %></p>
</div>
<% end %>
